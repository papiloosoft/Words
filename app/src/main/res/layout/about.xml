<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9D88C1"
                android:layoutDirection="rtl">

    <ImageView
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/papiloo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="گروه نرم افزاری پاپیلو" />
    <TextView
        android:id="@+id/textSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="www.Papiloo.ir" />
    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Papiloosoft@gmail.com" />
    <TextView
        android:id="@+id/textTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="تلفن: 02333344148" />

    <Button
        android:id="@+id/btnInsta"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="480dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ico_insta"

        />

    <Button
        android:id="@+id/btnWhatapp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/btnInsta"
        android:background="@drawable/ico_whatsapp"

        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/btnInsta" />
    <Button
        android:id="@+id/btnTelgram"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="480dp"
        android:layout_marginRight="230dp"
        android:layout_marginEnd="-200dp"
        android:layout_toStartOf="@+id/btnInsta"
        android:background="@drawable/ico_telegram"

        android:layout_toLeftOf="@+id/btnInsta" />
    <TextView
        android:id="@+id/textVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="نسخه: 0.1" />
    <Button
        android:id="@+id/goHomeButt"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/btnInsta"
        android:layout_marginTop="10dp"
        android:background="@drawable/home_butt"/>


</RelativeLayout>
