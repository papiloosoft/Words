<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9D88C1"
    tools:context=".Home"
    android:layoutDirection="rtl">


    <Button
        android:id="@+id/btnMazani"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/hBestTxt"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ico_maz"

        android:textColor="#E33030"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnSemnani"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/hBestTxt"

        android:layout_marginTop="50dp"

        android:layout_toStartOf="@+id/btnFa"
        android:layout_marginLeft="20dp"



        android:background="@drawable/ico_sem"
        android:textColor="#E33030"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/logo_home"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/bestHome"
        android:textAllCaps="true"
        android:textColor="#673AB7"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hBestTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="213dp"
        android:text="00"
        android:textColor="#673AB7"
        android:textSize="32sp" />

    <Button
        android:id="@+id/btnFa"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/hBestTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/ico_fa"

        android:textColor="#FFE33030"
        android:textSize="25sp" />
    <!--        android:background="@drawable/play_butt"
        android:background="#FFEB3B" -->


    <Button
        android:id="@+id/btnSangesari"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/hBestTxt"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@+id/btnFa"
        android:layout_marginLeft="-200dp"
        android:background="@drawable/ico_san"
        android:textColor="#FFE33030"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnrate"
        android:layout_width="110dp"
        android:layout_height="54dp"
        android:layout_below="@+id/hBestTxt"
        android:layout_marginTop="200dp"
        android:background="@drawable/ico_idea"
        android:textSize="18sp"
        android:layout_toStartOf="@+id/btnFa"
        android:layout_marginLeft="0dp"/>

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="110dp"
        android:layout_height="54dp"
        android:layout_below="@+id/hBestTxt"
        android:layout_marginTop="200dp"
        android:background="@drawable/ico_about"
        android:textSize="18sp"
        android:layout_toStartOf="@+id/btnFa"
        android:layout_marginLeft="-200dp"


        />

</RelativeLayout>
