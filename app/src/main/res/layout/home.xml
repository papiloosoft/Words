<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9D88C1"
    tools:context=".Home"
    android:layoutDirection="rtl">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/logo_home"
        />



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/bestHome"
        android:textAllCaps="true"
        android:textColor="#673AB7"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hBestTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="213dp"
        android:text="00"
        android:textColor="#673AB7"
        android:textSize="32sp" />
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/hBestTxt"
        android:layout_marginTop="10dp"
        android:divider="#36b3c4"
        android:dividerHeight="3dp"
         />


    <Button
        android:id="@+id/btnFa4"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnRate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_corner_green"
        android:text="فارسی 4"

        android:textColor="#FFE33030"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnFa3"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnRate"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/btnFa4"
        android:background="@drawable/circle_corner_green"
        android:text="فارسی 3"
        android:textColor="#FFE33030"
        android:textSize="25sp" />
    <!--        android:background="@drawable/play_butt"
        android:background="#FFEB3B" -->


    <Button
        android:id="@+id/btnRate"
        android:layout_width="110dp"
        android:layout_height="54dp"
        android:layout_below="@+id/list_view"
        android:layout_marginTop="10dp"
        android:background="@drawable/ico_idea"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="110dp"
        android:layout_height="54dp"
        android:layout_below="@+id/list_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="301dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ico_about"
        android:textSize="18sp" />




</RelativeLayout>
